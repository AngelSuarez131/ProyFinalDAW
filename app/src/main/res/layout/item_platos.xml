<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp" >

        <LinearLayout
            android:id="@+id/linearprincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgPlato"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ceviche" />

            <LinearLayout
                android:id="@+id/linearcardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombrePlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ceviche"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"/>

                <TextView
                    android:id="@+id/tvDescripPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuestro ceviche de pescado con mariscos."
                    android:textSize="16sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tvPrecioPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/.25.00"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"/>


                <Button
                    android:id="@+id/btnAnadir"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="AÃ±adir"
                    android:backgroundTint="#009688"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>